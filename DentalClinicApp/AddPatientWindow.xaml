<Window x:Class="DentalClinicApp.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalClinicApp"
        mc:Ignorable="d"
        Title="AddPatientWindow" Height="600" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Фамилия:" Grid.Row="2" Margin="10,10,10,10" Grid.ColumnSpan="2"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="3" Margin="10,10,10,10" Grid.ColumnSpan="2"/>

        <Label Content="Имя:" Grid.Row="7" Margin="10,5,10,15" Grid.ColumnSpan="2"/>
        <TextBox x:Name="FirstNameTextBox" Margin="10,36,10,-8" Grid.ColumnSpan="2" Grid.Row="7"/>

        <Label Content="Отчество:" Grid.Row="7" Margin="10,72,10,-52" Grid.ColumnSpan="2"/>
        <TextBox x:Name="SurNameTextBox" Grid.Row="7" Margin="10,103,10,-75" Grid.ColumnSpan="2"/>

        <Label Content="Дата рождения:" Grid.Row="7" Margin="10,143,10,-123" Grid.ColumnSpan="2"/>
        <DatePicker x:Name="DateOfBirthPicker" Grid.Row="7" Margin="10,174,10,-152" Grid.ColumnSpan="2"/>

        <Label Content="Телефон:" Grid.Row="7" Margin="10,203,10,-183" Grid.ColumnSpan="2"/>
        <TextBox x:Name="PhoneNumberTextBox" Grid.Row="7" Margin="10,234,10,-214" Grid.ColumnSpan="2"/>

        <Label Content="Адрес:" Grid.Row="7" Margin="10,265,10,-245" Grid.ColumnSpan="2"/>
        <TextBox x:Name="AddressTextBox" Grid.Row="7" Margin="10,296,10,-276" Grid.ColumnSpan="2"/>

        <Label Content="История болезни:" Grid.Row="7" Margin="10,327,10,-307" Grid.ColumnSpan="2"/>
        <TextBox x:Name="MedicalHistoryTextBox" Grid.Row="7" Margin="10,358,10,-338" Grid.ColumnSpan="2"/>

        <Button Content="Сохранить" Click="Save_Click" Grid.Row="7" Margin="42,422,0,-412" HorizontalAlignment="Left" Width="110" Grid.Column="1"/>

    </Grid>
</Window>
