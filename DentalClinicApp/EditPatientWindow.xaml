<Window x:Class="DentalClinicApp.EditPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalClinicApp"
        mc:Ignorable="d"
        Title="EditPatientWindow" Height="700" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поля для редактирования данных пациента -->
        <Label Content="Фамилия:" Margin="10,10,10,10"/>
        <TextBox x:Name="LastNameTextBox" Margin="10,41,10,37" Grid.RowSpan="9"/>

        <Label Content="Имя:" Grid.Row="8" Margin="10,22,10,2"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="8" Margin="10,53,10,-21"/>

        <Label Content="Отчество:" Grid.Row="8" Margin="10,89,10,-65"/>
        <TextBox x:Name="SurNameTextBox" Grid.Row="8" Margin="10,120,10,-88"/>

        <Label Content="Дата рождения:" Grid.Row="8" Margin="10,165,10,-141"/>
        <DatePicker x:Name="DateOfBirthPicker" Grid.Row="8" Margin="10,196,10,-170"/>

        <Label Content="Номер телефона:" Grid.Row="8" Margin="10,251,10,-227"/>
        <TextBox x:Name="PhoneNumberTextBox" Grid.Row="8" Margin="10,287,10,-255"/>

        <Label Content="Адрес:" Grid.Row="8" Margin="10,331,10,-311"/>
        <TextBox x:Name="AddressTextBox" Grid.Row="8" Margin="10,366,10,-346"/>

        <Label Content="История болезни:" Grid.Row="8" Margin="10,425,10,-405"/>
        <TextBox x:Name="MedicalHistoryTextBox" Grid.Row="8" Margin="10,460,10,-440"/>

        <!-- Кнопки для сохранения или отмены -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10"/>
        <Button Content="Сохранить" Click="Save_Click" Margin="150,545,150,-525" Grid.Row="8"/>
        <Button Content="Отмена" Click="Cancel_Click" Margin="274,545,26,-525" Grid.Row="8"/>

    </Grid>
</Window>
